<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.github.alansanchezp.gnomy">

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.category.AddEditCategoryActivity"></activity>
        <activity android:name=".ui.category.CategoriesActivity" />
        <activity android:name=".ui.transaction.AddEditTransactionActivity" />
        <activity android:name=".ui.account.AddEditAccountActivity" />
        <activity android:name=".ui.account.AccountDetailsActivity" />
        <activity android:name=".ui.account.AccountBalanceHistoryActivity" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>